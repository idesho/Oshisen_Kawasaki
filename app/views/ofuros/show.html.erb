<p id="notice"><%= notice %></p>


<p>
  <h3>銭湯名 : <%= @ofuro.name %></h3>
</p>

<p>
  <%= image_tag @ofuro.image.url, class:'image' %>
</p>

    <% if logged_in? %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(ofuro_id: @ofuro.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>

<p>
  <strong>Name:</strong>
  <%= @ofuro.name %>
</p>
<p>
  <strong>Introduction:</strong>
  <%= @ofuro.introduction %>
</p>
<p>
  <strong>Address:</strong>
  <%= @ofuro.address %>
</p>



<% if current_user.admin? %>
<%= link_to 'Edit', edit_ofuro_path(@ofuro) %> 
<%end%>
