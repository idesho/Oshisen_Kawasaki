<div class="container ">
<p id="notice"><%= notice %></p>
<h1>ofuros</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>
    <% @ofuros.each do |ofuro| %>
      <tr>
        <td><%= ofuro.name %></td>
        <td><%= ofuro.address %></td>        

        <td><%= link_to '詳細をコチラ', ofuro %></td>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Edit', edit_ofuro_path(ofuro) %></td>
            <td><%= link_to 'Destroy', ofuro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if logged_in? %>
  <% if current_user.admin? %>
    <%= link_to 'New Ofuro', new_ofuro_path %>
  <% end %>
<% end %>
</div>