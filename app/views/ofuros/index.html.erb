<div class="container ">
<p id="notice"><%= notice %></p>
<h1>銭湯一覧</h1>

<form method="post" action="example.cgi">
<p>
  <select name="example2">
    <% @wards.each do |ward| %>
      <option value="<%= ward.id  %>"><%= ward.name  %></option>
    <% end %>
  </select>
  <input type="submit" value="送信する">
</p>
</form>

<table class="table table-hover">
  <thead>
    <tr>
      <th>銭湯名</th>
      <th>住所</th>

      <th colspan="3"></th>
    </tr>
  </thead>
    <% @ofuros.each do |ofuro| %>
      <tr>
        <td><%= ofuro.name %></td>
        <td><%= ofuro.address %></td>        
        <td><%= link_to '詳細はコチラ', ofuro %></td>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <td><%= link_to '編集', edit_ofuro_path(ofuro) %></td>
            <td><%= link_to '削除', ofuro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if logged_in? %>
  <% if current_user.admin? %>
    <%= link_to '新規作成', new_ofuro_path %>
  <% end %>
<% end %>
</div>