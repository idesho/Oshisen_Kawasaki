
<p id="notice"><%= notice %></p>
<div class="container mt-5 ">
  <div class="text-center">
		<h1><%= @user.nickname %>のページ</h1>
		<div class="card card-container">
			<td class="users-show-edit">ユーザーアイコン</td>
			<div class="image_tag">
				<% if @user.image.present? %>
					<%= image_tag @user.image.url %>
				<% else %>
					<%= image_tag 'default.jpg' %>
				<% end %>
			</div>
			<p>メールアドレス: <%= @user.email %></p>
			<% if logged_in? %>
				<% if current_user == @user %>
					<p><%= link_to_if(@user, 'プロフィール編集', edit_user_path(@user)) %></p>
				<% end %>
			<% end %>
			<p><td class="users-show-edit">お気に入りの銭湯</td></p>
			<% if @favorite_list.present? %>
				<% @favorite_list.each do |ofuro| %>
					<p><%= ofuro.name %>:
					<%= link_to "この銭湯ページへ行く", ofuro_path(ofuro) %></p>
				<% end %>
			<% end %>
		</div>
	</div>
</div>